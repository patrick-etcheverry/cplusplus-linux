{
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++ générer le fichier actif",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "*.cpp",
                "-Wall",
                "-Wextra",
                "-Wpedantic",
                "-Wconversion",
                "-fexceptions",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Tâche générée par le débogueur."
        }
    ],
    "version": "2.0.0"
}
